source "https://rubygems.org"
ruby RUBY_VERSION

gem "webrick", "1.7.0"
gem "github-pages", group: :jekyll_plugins

group :jekyll_plugins do
  # Allows to consume jekyll themes from git repos. This is handy when you want to use
  # unreleased versions of themes, such as minima v3.0
  gem "jekyll-remote-theme", "0.4.3"
end
